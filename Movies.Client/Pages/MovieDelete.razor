@page "/moviedelete/{Id:int}"
@using Movies.Client.Models
@attribute [Authorize]

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@movie.Title</dd>
        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@movie.Genre</dd>
        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@movie.ReleaseDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">@movie.Owner</dd>
    </dl>

    <div>
        <button class="btn btn-danger" @onclick="DeleteMovie">Delete</button> |
        <a href="/moviesindex">Back to List</a>
    </div>
</div>
